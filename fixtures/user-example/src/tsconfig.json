// Example TSConfig (I've just taken this from the expo repo to test the bundling)
// https://github.com/expo/expo/blob/ba453f0dc5c66c93b5d569f619616bd0ab36c7dc/packages/expo/tsconfig.base.json
{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Expo",

	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"jsx": "react-native",
		"lib": ["DOM", "ESNext"],
		"module": "preserve",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"customConditions": ["react-native"],
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ESNext"
	},

	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
